
public class Solution {

	public static String removeAllOccurrencesOfChar(String str, char ch) {
		int n = str.length();
        if(n==0){  //base case for empty string
            return str;
        }
        String result = "";
        for(int i=0;i<n;i++){
            if(str.charAt(i)!=ch){
                result += str.charAt(i);
            }
        }
        return result;
	}
}
